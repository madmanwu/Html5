body
  font-size: 0.12rem
  position: absolute
  top: 0
  bottom: 0
  width: 100%
  display: flex
  flex-direction: column
  background: #ffffff
header
  display: flex
  padding: 0.08rem 0.08rem
  align-items: center
  justify-content: space-between
  p
    align-items: center
    background: #e6e7e9
    padding-left: 0.08rem
    display: flex
    align-items: center
    width: 100%
    font-size: 0.12rem
    border-radius: 0.03rem
    input
      border-radius: 0.03rem
      background: #e6e7e9
      margin-left: 0.06rem
      border-width: 0
      outline: none
      width: 100%
      padding-top: 0.05rem
      padding-bottom: 0.05rem
  & > i
    margin-left: 0.13rem
  .sea
    font-size: 0.16rem
input::-webkit-input-placeholder
  color: #666666
section
  overflow-y: auto
  flex: 1
  .list
    padding-right: 0.08rem
    padding-top: 0.11rem
    padding-bottom: 0.03rem
    padding-left: 0.08rem
    display: flex
    border-top: 0.01rem solid #cccccc
    border-bottom: 0.01rem solid #cccccc
    box-shadow: 0.05rem 0 0.05rem #cccccc
    li
      display: flex
      justify-content: center
      width: 17%
      padding-bottom: 0.08rem
    .first
      padding-left: 0.08rem
      padding-right: 0.08rem
    .last
      padding-left: 0.08rem
    .active
      border-bottom: 0.01rem solid #fa4b9b
      color: #fa4b9b
  .images
    margin-top: 0.06rem
    box-sizing: border-box
    background: url("../images/imgs/honey1.jpg")
    background-repeat: no-repeat
    padding-left: 0.08rem
    background-size: 100% 100%
    padding-right: 0.08rem
    height: 1.15rem
    width: 100%
    text-align: center
    .top
      font-size: 0.16rem
      padding-top: 0.08rem
      color: #000000
      span
        font-size: 0.21rem
        color: red
    .tops
      padding-top: 0.06rem
      button
        border-width: 0
        outline: none
        background: #000000
        color: #ffffff
        border-radius: 0.15rem
        width: 0.36rem
        height: 0.14rem
        text-align: center
        margin-left: 0.06rem
  .nav
    display: flex
    padding-left: 0.08rem
    padding-right: 0.08rem
    li
      padding-left: 0.08rem
      padding-right: 0.08rem
      width: 33%
      border: 0.01rem solid #ffe4e2
      border-radius: 0.03rem
      margin-top: 0.09rem
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      position: relative
      & > span
        display: inline-block
        background: #f84d59
        color: #ffffff
        width: 0.35rem
        height: 0.14rem
        position: absolute
        left: 0.02rem
        top: -0.02rem
        text-align: center
        border-radius: 0.03rem
      img
        width: 0.43rem
        height: 0.74rem
      & > p
        color: #cccccc
        font-size: 0.10rem
      h3
        display: inline-block
        font-size: 0.08rem
      div
        text-align: center
        width: 100%
        border-top: 0.01rem dotted #ffe4e2
        & > p
          margin-top: 0.04rem
          text-decoration: line-through
          .four
            color: #f76573
          .yuan
            color: #666666
        & > span
          display: inline-block
          background: #f84c5a
          width: 0.68rem
          height: 0.15rem
          border-radius: 0.08rem
          color: #ffffff
          text-align: center
          border: 0.01rem solid #f76573
          margin-top: 0.04rem
          margin-bottom: 0.04rem
    .three
      margin-left: 0.08rem
      margin-right: 0.08rem
    .bottom
      width: 31%
      padding-left: 0.09rem
      padding-right: 0.09rem
      & > div
        span
          font-size: 0.14rem
          border: none
          background: none
          color: #f84c5a
        .xian
          width: 100%
          height: 0.02rem
          background: #f84c5a
        .quan
          width: 0.14rem
          height: 0.14rem
          background: #000000
          line-height: 0.14rem
          i
            font-size: 0.14rem
            color: #ffffff
  .box
    height: 0.08rem
    background: #CCC
    margin-bottom: 0.08rem
    margin-top: 0.08rem
  .wrap
    height: 0.22rem
    display: flex
    margin-top: 0.18rem
    margin-bottom: 0.1rem
    align-items: center
    justify-content: center
    .top
      font-size: 0.14rem
      span
        font-size: 0.2rem
        color: #f84c5a
footer
  ul
    display: flex
    border-top: 0.01rem solid #CCCCCC
    li
      flex: 1
      padding-top: 0.06rem
      padding-bottom: 0.06rem
      a
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
      .begin
        color: #fa529f
        i
          font-size: 0.16rem
        span
          margin-top: 0.04rem
          font-size: 0.12rem

