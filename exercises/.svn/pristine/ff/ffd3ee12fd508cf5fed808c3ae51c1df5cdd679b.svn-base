body
  position: absolute
  width: 100%
  top: 0
  bottom: 0
  display: flex
  font-size: 0.12rem
  flex-direction: column
  background: #ffffff
header
  .on
    width: 100%
    display: flex
    height: 0.35rem
    background: #1b1b20
    font-size: 0.14rem
    color: #ffffff
    justify-content: space-between
    align-items: center
    box-sizing: border-box
    padding: 0.11rem 0.1rem
    .left
      width: 0.37rem
      i
        margin-right: 0.03rem
        font-size: 0.16rem
    & > .right
      width: 0.37rem
      text-align: right
section
  flex: 1
  overflow-y: auto
  .title
    width: 100%
    padding: 0.16rem 0.11rem
    box-sizing: border-box
  .deep
    padding-left: 0.11rem
    padding-right: 0.11rem
    width: 100%
    height: 1.74rem
    display: flex
    flex-direction: column
    box-sizing: border-box
    div
      flex: 1
      box-sizing: border-box
    .satisfaction
      width: 100%
      height: 100%
      & > div
        height: 0.47rem
        display: flex
        p
          width: 100%
          height: 100%
          display: flex
          align-items: center
          justify-content: space-around
          input
            display: none
          label
            flex: 1
            color: #666
            display: inline-block
            height: 0.25rem
            border: 0.01rem solid #ccc
            border-radius: 0.05rem
            text-align: center
            line-height: 0.25rem
            position: relative
          .middle
            margin-left: 0.05rem
            margin-right: 0.05rem
          .active
            color: #2494ff
            border: 0.01rem solid #2494ff


