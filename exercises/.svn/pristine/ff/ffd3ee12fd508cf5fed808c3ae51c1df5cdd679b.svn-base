  .write
    width: 100%
    box-sizing: border-box
    height: 1.16rem
    padding-left: 0.11rem
    padding-right: 0.11rem
    display: flex
    justify-content: center
    align-items: center
    margin-top: 0.3rem
    .area
      border-radius: 0.03rem
      width: 100%
      height: 100%
      border: 0.01rem solid #CCC
      padding: 0.09rem 0.07rem
  .phone
    width: 100%
