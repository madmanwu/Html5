body
  font-size: 0.12rem
  position: absolute
  top: 0
  bottom: 0
  width: 100%
  display: flex
  flex-direction: column
  background: #ffffff
header
  display: flex
  align-items: center
  justify-content: space-between
  padding: 0.09rem 0.14rem
  border-bottom: 0.01rem solid #cccccc
  .a
    font-size: 0.16rem
  span
    font-size: 0.14rem
    display: inline-block
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
    width: 1.61rem
section
  flex: 1
  overflow-y: auto
  img
    display: block
    width: 100%
    min-height: 2.11rem
  .word
    color: #ffffff
    display: flex
    flex-direction: column
    align-items: center
    background: #f1b86b
    padding: 0.1rem 0.13rem
    text-indent: 0.2rem
    line-height: 0.18rem
    h3
      font-size: 0.16rem
  .hot
    border-bottom: 0.02rem solid #e5924b
    padding: 0.08rem 1.09rem
    display: flex
    flex-direction: column
    align-items: center
    h1
      font-size: 0.2rem
    .shop
      background: #f87339
      color: #ffffff
    .heart
      font-size: 0.1rem
      text-align: left
      color: #cccccc
      padding-left: -0.2rem
  .picture
    padding-top: 0.13rem
    padding-left: 0.05rem
    padding-right: 0.05rem
    display: flex
    .left
      flex: 1
      img
        width: 100%
        min-height: 1.19rem
    .right
      display: flex
      flex-direction: column
      justify-content: flex-end
      flex: 1
      margin-left: 0.05rem
      img
        width: 100%
        min-height: 0.5rem
      p
        font-size: 0.08rem
        line-height: 0.13rem
        color: #666666
  & > a
    display: inline-block
    width: 0.29rem
    height: 0.29rem
    background: #ffffff
    border-radius: 50%
    border: 0.02rem solid #f54b92
    line-height: 0.29rem
    text-align: center
    position: absolute
    right: 0.09rem
    bottom: 0.09rem
    .last
      color: #ec2f80
      font-size: 0.2rem



