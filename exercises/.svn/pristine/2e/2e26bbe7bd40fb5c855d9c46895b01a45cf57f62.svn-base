body
  font-size: 0.12rem
  width: 100%
  top: 0
  bottom: 0
  position: absolute
  display: flex
  flex-direction: column
header
  color: #ffffff
  padding-top: 0.11rem
  padding-bottom: 0.11rem
  background: #ed722e
  padding-right: 0.14rem
  text-align: center
  div
    display: inline
  span
    position: absolute
    right: 0.14rem
section
  padding-left: 0.09rem
  padding-right: 0.09rem
  flex: 1
  overflow-y: auto
  box-sizing: border-box
  .row
    padding-top: 0.08rem
    padding-bottom: 0.08rem
    border-bottom: 0.01rem solid #f7f7f7
  .left
    input
      display: none
    input:checked + label span
      left: 0.01rem
      width: 0.08rem
      height: 0.09rem
      position: absolute
      display: inline-block
      border-right: 0.01rem solid #000
      border-bottom: 0.01rem solid #000000
      transform: rotate(30deg)
    label
      width: 0.14rem
      height: 0.14rem
      border: 0.01rem solid #b7b9c6
      border-radius: 50%
      position: relative
      text-align: center
      position: absolute
      left: 0
